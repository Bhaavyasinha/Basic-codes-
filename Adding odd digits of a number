// Online C compiler to run C program online
#include <stdio.h>

int main() {
    int number;
    printf (" Enter a number: \n");
    scanf ("%d",&number);
    int sum = 0;
    int position = 1;
    int digit;
    while (number != 0){
        digit = number % 10;
        if (position % 2 == 0){
            sum = sum + digit;
        }
        number = number /10;
        position ++;
    }
    printf ("%d", sum);
    return 0;
}
